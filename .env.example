# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Service URLs
FRONTEND_URL=http://localhost:3000
AUTH_SERVICE_URL=http://auth-service:3001

# Database Configuration (used by docker-compose for PostgreSQL container)
POSTGRES_DB=microservices_platform
POSTGRES_USER=app_user
POSTGRES_PASSWORD=secure_password_change_in_production

# Full Database URL (constructed from the above)
DATABASE_URL=postgresql://app_user:secure_password_change_in_production@database:5432/microservices_platform

# Riot Games API (required for LoL Tracking Service)
RIOT_API_KEY=your_riot_api_key_here

# Training Peaks Service - Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_SECRET=your-encryption-secret-change-in-production

# Training Peaks Service - Email Configuration (for notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com

# Training Peaks Service - AI API (Groq for workout parsing)
GROQ_API_KEY=your-groq-api-key-here

# Node Environment
NODE_ENV=development

# Session Configuration (optional - will be auto-generated if not provided)
# SESSION_SECRET=your-custom-session-secret

# Port Configuration (optional - defaults are provided)
# AUTH_SERVICE_PORT=3001
# LANDING_PAGE_PORT=3000
# HELLO_WORLD_PORT=3002
