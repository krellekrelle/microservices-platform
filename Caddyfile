:80 {
    # Main landing page (default)
    reverse_proxy landing-page:3000
    
    # Auth service routes
    reverse_proxy /auth/* auth-service:3001
    
    # Hello World App routes - strip /hello prefix
    handle_path /hello/* {
        reverse_proxy hello-world-app:3002
    }
}

